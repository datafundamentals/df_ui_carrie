create database if not exists <%= datasource.hiveDb %>;

use <%= datasource.hiveDb %>;
 
-- DROP TABLE IF EXISTS `<%= datasource.hiveDb %>`.<%= datasource.tableName %>;

CREATE EXTERNAL TABLE IF NOT EXISTS <%= datasource.tableName %>
  PARTITIONED BY (etl_date STRING)
  ROW FORMAT SERDE
  'org.apache.hadoop.hive.serde2.avro.AvroSerDe'
  STORED as INPUTFORMAT
  'org.apache.hadoop.hive.ql.io.avro.AvroContainerInputFormat'
  OUTPUTFORMAT
  'org.apache.hadoop.hive.ql.io.avro.AvroContainerOutputFormat'
  LOCATION 'hdfs://localhost.localdomain:8020/user/cloudera/<%= datasource.hdfsDir %>/<%= datasource.uniqueName %>/<%= datasource.tableName %>/data'
  TBLPROPERTIES (
    'avro.schema.url'='hdfs://localhost.localdomain:8020/user/cloudera/<%= datasource.hdfsDir %>/<%= datasource.uniqueName %>/<%= datasource.tableName %>/schema/<%= datasource.tableName %>.avsc');
